<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Data</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <table>
        <caption>All Users Information</caption>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
        <% for (let user of users) { %>
        <tr>
            <td><%=user.id%></td>
            <td><%=user.username%></td>
            <td><%=user.email%></td>
            <td><form action="/user/<%=user.id%>/edit" method="get">
                <button>Edit username</button>
            </form></td>
            <td>
                <form method="get" action="/user/<%=user.id%>/delete">
                  <button>Delete</button>
                </form>
              </td>
        </tr>
        <% } %>
    </table>
</body>
</html>